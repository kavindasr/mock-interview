        }
        
        strong,
        .strong {
            font-weight: 700;
        }
        
        h1,
        h2,
        h3,
        p,
        ol,
        ul,
        li {
            margin-top: 0;
        }
        
        .btn {
            background-color: #2196F3;
            border: 1px solid #2196F3;
            border-radius: 2px;
            color: #ffffff;
            display: inline-block;
            font-family: Roboto, Helvetica, sans-serif;
            font-size: 14px;
            font-weight: 400;
            line-height: 36px;
            text-align: center;
            text-decoration: none;
            text-transform: uppercase;
            width: 200px;
            height: 36px;
            padding: 0 8px;
            margin: 0;
            outline: 0;
            outline-offset: 0;
            -webkit-text-size-adjust: none;
        }
        
        .main {
            -webkit-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.12), 0 1px 2px 0 rgba(0, 0, 0, 0.24);
            -moz-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.12), 0 1px 2px 0 rgba(0, 0, 0, 0.24);
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.12), 0 1px 2px 0 rgba(0, 0, 0, 0.24);
        }
        
        .columns {
            margin: 0 auto;
            width: 600px;
            background-color: #ffffff;
            font-size: 14px;
        }
        
        .column {
            text-align: left;
            background-color: #ffffff;
            font-size: 14px;
        }
        
        .column-top {
            font-size: 24px;
            line-height: 24px;
        }
        
        .content {
            width: 100%;
        }
        
        .content p {
            margin-top: 0;
            margin-bottom: 16px;
            color: #212121;
            font-family: sans-serif, Roboto, Helvetica;
            font-weight: 400;
            font-size: 16px;
            line-height: 24px;
        }
    </style>

</head>

